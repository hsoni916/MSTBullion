<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/BackgroundSpot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/outline_2"
        app:layout_constraintTop_toTopOf="@id/GoldSpotLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/GoldSpotPrices"/>

    <TextView
        android:id="@+id/GoldSpotLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:paddingTop="2dp"
        android:text="@string/gold_spot"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/GoldSpotPrices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:paddingStart="12dp"
        android:text="9999.99"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/GoldSpotLabel"
        app:layout_constraintTop_toBottomOf="@id/GoldSpotLabel" />
    <ImageView
        android:id="@+id/GDI"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/GoldSpotPrices"
        app:layout_constraintStart_toEndOf="@id/GoldSpotPrices"
        app:layout_constraintTop_toTopOf="@id/GoldSpotPrices" />

    <TextView
        android:id="@+id/SilverSpotLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/silver_spot"
        android:textAlignment="center"
        android:paddingTop="2dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/INRSpotLabel"
        app:layout_constraintStart_toEndOf="@id/GoldSpotLabel"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/SilverSpotPrices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:text="99.99"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/SilverSpotLabel"
        app:layout_constraintTop_toBottomOf="@id/SilverSpotLabel" />
    <ImageView
        android:id="@+id/SDI"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/SilverSpotPrices"
        app:layout_constraintStart_toEndOf="@id/SilverSpotPrices"
        app:layout_constraintTop_toTopOf="@id/SilverSpotPrices" />

    <TextView
        android:id="@+id/INRSpotLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:text="@string/inr"
        android:textAlignment="center"
        android:paddingTop="2dp"
        android:paddingEnd="12dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/INRSpotPrices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="99.99"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/INRSpotLabel"
        app:layout_constraintStart_toStartOf="@id/INRSpotLabel"
        app:layout_constraintTop_toBottomOf="@id/INRSpotLabel" />

    <ImageView
        android:id="@+id/IDI"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/INRSpotPrices"
        app:layout_constraintStart_toEndOf="@id/INRSpotPrices"
        app:layout_constraintTop_toTopOf="@id/INRSpotPrices" />


    <TextView
        android:id="@+id/ErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/GoldMCXPrices"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/MetalList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_bg"
        android:paddingTop="4dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/ErrorMessage"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/BackgroundMCX"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/outline_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/GoldMCX"
        app:layout_constraintBottom_toBottomOf="@id/GoldMCXPrices"/>

    <TextView
        android:id="@+id/GoldMCX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:paddingTop="2dp"
        android:text="@string/gold_mcx"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/BackgroundSpot"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/GoldMCXPrices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:paddingStart="12dp"
        android:paddingBottom="2dp"
        android:text="47050"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/GoldMCX"
        app:layout_constraintTop_toBottomOf="@id/GoldMCX"/>
    <ImageView
        android:id="@+id/GDIMCX"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/GoldMCXPrices"
        app:layout_constraintStart_toEndOf="@id/GoldMCXPrices"
        app:layout_constraintTop_toTopOf="@id/GoldMCXPrices" />


    <TextView
        android:id="@+id/SilverMCX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:paddingTop="2dp"
        android:text="@string/silver_mcx"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/BackgroundSpot"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/SilverMCXPrices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:paddingStart="12dp"
        android:text="47050"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/SilverMCX"
        app:layout_constraintTop_toBottomOf="@id/GoldMCX"/>
    <ImageView
        android:id="@+id/SDIMCX"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/SilverMCXPrices"
        app:layout_constraintStart_toEndOf="@id/SilverMCXPrices"
        app:layout_constraintTop_toTopOf="@id/SilverMCXPrices" />

</androidx.constraintlayout.widget.ConstraintLayout>