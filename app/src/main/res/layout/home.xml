<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Records"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/history"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Account"/>
    <TextView
        android:id="@+id/Option1Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Records"
        app:layout_constraintTop_toBottomOf="@id/Records"
        app:layout_constraintStart_toStartOf="@id/Records"
        app:layout_constraintEnd_toEndOf="@id/Records"/>



    <ImageView
        android:id="@+id/Account"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/account"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/BankDetails"/>
    <TextView
        android:id="@+id/Option2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        app:layout_constraintTop_toBottomOf="@id/Account"
        app:layout_constraintStart_toStartOf="@id/Account"
        app:layout_constraintEnd_toEndOf="@id/Account"/>

    <ImageView
        android:id="@+id/BankDetails"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/bank"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/Option3Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bank Info"
        app:layout_constraintTop_toBottomOf="@id/BankDetails"
        app:layout_constraintStart_toStartOf="@id/BankDetails"
        app:layout_constraintEnd_toEndOf="@id/BankDetails"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/container1"
        android:background="#fff"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/Option1Label"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </androidx.viewpager.widget.ViewPager>

    <ImageButton
        android:id="@+id/logout"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        android:padding="24dp"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:src="@drawable/logout"
        android:background="@drawable/circle_background"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>